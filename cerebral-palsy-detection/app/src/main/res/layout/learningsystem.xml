<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".learningsystem"
    android:orientation="vertical">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/lstoolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/app"
      android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
      app:titleMarginStart="20dp"
      android:layout_marginBottom="5dp"
      app:titleTextColor="@color/white"
      tools:ignore="MissingConstraints" />

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardElevation="10dp"
      app:cardCornerRadius="10dp"
      android:background="@color/white"
      android:layout_margin="10dp"
      android:id="@+id/video1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:src="@drawable/video"
          android:layout_margin="10dp" />

      <LinearLayout
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speech Therapy Video 1"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/app" />

      </LinearLayout>


    </LinearLayout>


  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardElevation="10dp"
      app:cardCornerRadius="10dp"
      android:background="@color/white"
      android:layout_margin="10dp"
      android:id="@+id/video2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:src="@drawable/video"
          android:layout_margin="10dp" />

      <LinearLayout
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speech Therapy Video 2"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/app" />

      </LinearLayout>


    </LinearLayout>


  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardElevation="10dp"
      app:cardCornerRadius="10dp"
      android:background="@color/white"
      android:layout_margin="10dp"
      android:id="@+id/video3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:src="@drawable/video"
          android:layout_margin="10dp" />

      <LinearLayout
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Physical Therapy Video 3"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/app" />

      </LinearLayout>


    </LinearLayout>


  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardElevation="10dp"
      app:cardCornerRadius="10dp"
      android:background="@color/white"
      android:layout_margin="10dp"
      android:id="@+id/video4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:src="@drawable/video"
          android:layout_margin="10dp" />

      <LinearLayout
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Physical Therapy Video 4"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/app" />

      </LinearLayout>


    </LinearLayout>


  </androidx.cardview.widget.CardView>



</LinearLayout>